<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Slide_2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/slide1_image1"
        android:id="@+id/image_slide1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_slide1"
        android:text="@string/Slide1_title"
        android:layout_marginTop="10dp"
        android:id="@+id/slide1_title"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearanceForTheSlides"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Slide1_content"
        android:layout_below="@+id/slide1_title"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearanceForTheSlidesContent"/>

</RelativeLayout>