<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/CreateAccountFormHead"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/White"
        android:fontFamily="monospace"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/UsernameLabel"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UsernameLabel"/>

        <EditText
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:textColor="@color/Black"
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@drawable/registration_fields_style"
            />
        <TextView
            android:text="@string/username_must_be_at_least_3_characters_long"
            android:textSize="12sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center"
            android:textColor="@color/fucking8red"
            android:id="@+id/usernameErrorHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/PasswordLabel"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PasswordLabel"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/Black">

        <android.support.design.widget.TextInputEditText
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:textColor="@color/Black"
            android:background="@drawable/registration_fields_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Password"
            android:inputType="textPassword" />
                <TextView
                    android:id="@+id/passwordErrorHint"
                    android:text="@string/password_must_be_at_least_8_characters_long"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:textColor="@color/fucking8red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="10dp"
            android:id="@+id/EmailLabel"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EmailLabel"
            android:layout_marginTop="35dp"/>
        <EditText
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="8dp"
            android:background="@drawable/registration_fields_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Email"
            android:textColor="@color/Black"
            android:inputType="textEmailAddress" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:text="@string/email_used"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailUsedErrorHint"
            android:textSize="12sp"
            android:textColor="@color/fucking8red"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:text="@string/not8valid8email"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailErrorHint"
                android:textSize="12sp"
                android:textColor="@color/fucking8red"/>
        </RelativeLayout>
       <!-- <TextView
            android:id="@+id/TelephoneLabel"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/TelephoneLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"/>
        <EditText
            android:textColor="@color/Black"
            android:layout_marginTop="8dp"
            android:background="@drawable/registration_fields_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Telephone"
            android:inputType="phone" /> -->
        <Button
            android:textAllCaps="false"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="25dp"
            android:background="@drawable/create_account_custom_button_states"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/CreateAccount"
            android:text="@string/CreateAccount"
            android:textColor="@color/RegistrationFields"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>