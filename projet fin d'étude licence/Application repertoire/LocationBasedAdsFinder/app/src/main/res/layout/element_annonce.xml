<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="250dp"
    android:background="@color/colorPrimary"
    card_view:cardCornerRadius="3dp"
    card_view:cardBackgroundColor="@color/White"
    card_view:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ProgressBar
                android:indeterminateTint="@color/OrangeLight2"
                android:id="@+id/loadingImageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Image2"
                android:scaleType="fitXY"
               />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <TextView
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/fucking8red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Titre2"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
               />
            <TextView
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date_publication2"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Location2"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="13dp"
                android:layout_below="@id/Titre2"
                 />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                 />

            <ImageButton
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/add_update_horiz_black"
                android:id="@+id/ManageAd"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HiddenNativeID"/>


        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>


